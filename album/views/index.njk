{%extends "base.njk"%}

{%block content%}
  <div class="row">
    {%for dir in albumArr%}
      {{item(dir)}}
    {%endfor%}
  </div>
{%endblock%}

{%macro item(name)%}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="img/wjj.jpg" alt="{{name}}">
      <div class="caption">
        <h3>{{name}}</h3>
        <p><a href="{{name}}" class="btn btn-primary" role="button">进入</a></p>
      </div>
    </div>
  </div>
{%endmacro%}